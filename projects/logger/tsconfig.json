{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "sourceMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./log.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
